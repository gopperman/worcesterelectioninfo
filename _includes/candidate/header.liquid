<header class="header header--candidate">
  <div class="header__presents">
    <a class="header__link" href="{{site.url}}">
      <img src="{{site.url}}/images/mascot-small.png" alt=""/>
      <p>Worcester City Council 2025 Election</p>
    </a>
  </div>
  <div class="header__body header__body--candidate">
    <div>
      <img class="header__head header__head--wide" src="{{site.url}}/images/{{headshot}}" alt="{{name}}"/>
    </div>
    <div class="header__candidate-info">
      <div>
        <h1>{{ name }}</h1>
        <p>{{ status | capitalize }}, {{ district | district }}</p>
      </div>
    </div>
  </div>
</header>
