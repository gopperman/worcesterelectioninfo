<section class="section">
  <h2>How much money has {{candidate.name}} raised?</h2>
  <div class="grid grid--3">
    <div class="centered">
      <div>
        <h3>Lifetime Raised</h3>
        <p class="bignumber bignumber--alt">{{candidate.allTimeDonations | money}}</p>
      </div>
    </div>
    <div class="centered">
      <div>
        <h3>2024-2025 Donations</h3>
        <p class="bignumber">{{candidate.totalDonations | money}}</p>
      </div>
    </div>
    <div>
      <table>
        <caption><h3>{{candidate.name}}'s 2024-2025 Donations by Location</h3></caption>
        <tr>
          <th>Location</th>
          <th>Total</th>
          <th>Percent</th>
        </tr>
        <tr>
          <td class="table__candidate">Worcester</td>
          <td class="table__value">{{candidate.worcDonations | money}}</td>
          <td class="table__percent">{{candidate.worcPct | percent}}%</td>
        </tr>
        <tr>
          <td class="table__candidate">Massachusetts*</td>
          <td class="table__value">{{candidate.maDonations | money}}</td>
          <td class="table__percent">{{candidate.maPct | percent}}%</td>
        </tr>
        <tr>
          <td class="table__candidate">Out-of-State</td>
          <td class="table__value">{{candidate.oosDonations | money}}</td>
          <td class="table__percent">{{candidate.oosPct | percent}}%</td>
        </tr>
      </table>
      <p class="footnote">* Massachusetts donations excluding Worcester</p>
    </div>
  </div>
  {% assign years = candidate.annualDonations | count %}
  {% if years > 1 %}
    <div>
      <h3>{{ candidate.name }}'s Donations by Election Cycle</h3>
      <canvas id="annualDonations" data-donations='{{candidate.annualDonations | json}}'>
      </canvas>
    </div>
  {% endif %}
  {% if candidate.name == "John Fresolo" %}
    <section>
      <p class="footnote center">Note: This data only includes data from 2024-2025, to  more accurately represents Fresolo's support post-resignation from state government, and as a first-time city council candidate.</p>
    </section>
  {% endif %}
  <div role="img" aria-label="Wavy Line Shape" class="wavy-line"></div>
</section>
<section class="section--wide">
  <h2>Who are {{candidate.name}}'s Top Donors?</h2>
  <div class="grid grid--4">
    {% for donor in candidate.topDonorsAllTime %}
      <div class="card">
        <h3>{{donor.name | firstlast }}</h3>
        {% if donor.city != '' %}
          <h4>{{donor.city}}, {{donor.state}}</h4>
        {% endif %}
        <p class="bignumber bignumber--donor">{{donor.total | money }}</p>
      </div>
    {% endfor %}
  </div>
</section>
